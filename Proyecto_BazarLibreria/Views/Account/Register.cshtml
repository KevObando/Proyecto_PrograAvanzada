@model Proyecto_BazarLibreria.Models.RegisterViewModel
@{
    ViewBag.Title = "Registrarse";
}

<main class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="text-center mb-4">
                <h2 class="text-success">@ViewBag.Title</h2>
                <p>Cree una cuenta nueva para acceder al sistema</p>
            </div>
            @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { role = "form" }))
            {
                @Html.AntiForgeryToken()
                <div class="form-container p-4 border rounded bg-light shadow">
                    @Html.ValidationSummary("", new { @class = "alert alert-danger" })

                    <div class="form-group mb-3">
                        @Html.LabelFor(m => m.Email, "Correo electrónico", new { @class = "form-label" })
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Ingrese su correo electrónico" })
                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group mb-3">
                        @Html.LabelFor(m => m.Password, "Contraseña", new { @class = "form-label" })
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Cree una contraseña segura" })
                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group mb-3">
                        @Html.LabelFor(m => m.ConfirmPassword, "Confirmar contraseña", new { @class = "form-label" })
                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", placeholder = "Repita la contraseña" })
                        @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
                    </div>

                    <div class="d-grid mb-3">
                        <button type="submit" class="btn btn-success btn-block">Registrarse</button>
                    </div>

                    <p class="text-center">
                        ¿Ya tienes una cuenta?
                        @Html.ActionLink("Inicia sesión aquí", "Login", null, new { @class = "text-decoration-none text-success" })
                    </p>
                </div>
            }
        </div>
    </div>
</main>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}