@using Proyecto_BazarLibreria.Models
@model LoginViewModel
@{
    ViewBag.Title = "Iniciar sesión";
}

<main aria-labelledby="title" class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header text-center bg-primary text-white">
                    <h2 id="title" class="my-2">@ViewBag.Title</h2>
                </div>
                <div class="card-body">
                    @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { role = "form" }))
                    {
                        @Html.AntiForgeryToken()
                        <h5 class="text-center">Inicie sesión con su cuenta</h5>
                        <hr />
                        @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })

                        <div class="form-group mb-3">
                            @Html.LabelFor(m => m.Email, "Correo electrónico", new { @class = "form-label" })
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Ingrese su correo electrónico" })
                            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group mb-3">
                            @Html.LabelFor(m => m.Password, "Contraseña", new { @class = "form-label" })
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Ingrese su contraseña" })
                            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-check mb-3">
                            @Html.CheckBoxFor(m => m.RememberMe, new { @class = "form-check-input" })
                            @Html.LabelFor(m => m.RememberMe, "Recordarme", new { @class = "form-check-label" })
                        </div>

                        <div class="d-grid mb-3">
                            <button type="submit" class="btn btn-primary btn-block">Iniciar sesión</button>
                        </div>

                        <div class="text-center">
                            <p>
                                ¿No tienes una cuenta?
                                @Html.ActionLink("Regístrate aquí", "Register", null, new { @class = "text-decoration-none" })
                            </p>
                            @* Si habilitas restablecimiento de contraseña, descomenta esta línea *@
                            <!-- <p>@Html.ActionLink("¿Olvidaste tu contraseña?", "ForgotPassword", null, new { @class = "text-decoration-none" })</p> -->
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</main>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}