@model Proyecto_BazarLibreria.Models.Producto

@{
    ViewBag.Title = "Eliminar Producto";
}

<div class="container mt-4">
    <h2 class="text-center mb-4">@ViewBag.Title</h2>

    <div class="card shadow-sm">
        <div class="card-body">
            <h4 class="card-title text-danger">¿Estás seguro de que deseas eliminar este producto?</h4>
            <p class="text-muted">Esta acción no se puede deshacer.</p>
            <hr />

            <dl class="row">
                <dt class="col-sm-4">Nombre</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Nombre)</dd>

                <dt class="col-sm-4">Precio</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Precio)</dd>

                <dt class="col-sm-4">Disponibilidad</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Disponibilidad)</dd>

                <dt class="col-sm-4">Estado</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Estado)</dd>
            </dl>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div class="text-center mt-4">
                    <button type="submit" class="btn btn-danger">Eliminar</button>
                    @Html.ActionLink("Cancelar", "Index", null, new { @class = "btn btn-secondary ms-2" })
                </div>
            }
        </div>
    </div>
</div>