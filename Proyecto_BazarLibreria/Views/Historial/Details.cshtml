@model Proyecto_BazarLibreria.Models.Historial

@{
    ViewBag.Title = "Detalles del Historial";
}

<h2>Detalles del Historial</h2>

<div>
    <h4>Historial</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">ID</dt>
        <dd class="col-sm-10">@Model.Id</dd>
        <dt class="col-sm-2">Usuario</dt>
        <dd class="col-sm-10">@Model.UsuarioId</dd>
    </dl>
</div>

<h4>Pedidos Relacionados</h4>
<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Fecha</th>
            <th>Total</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var pedido in Model.Pedidos)
        {
            <tr>
                <td>@pedido.Id</td>
                <td>@pedido.Fecha.ToString("dd/MM/yyyy")</td>
                <td>@pedido.Total.ToString("C")</td>
                <td>
                    @Html.ActionLink("Detalles", "Details", "Pedido", new { id = pedido.Id }, new { @class = "btn btn-info" })
                </td>
            </tr>
        }
    </tbody>
</table>

<p>
    @Html.ActionLink("Volver a la lista", "Index", null, new { @class = "btn btn-secondary" })
</p>