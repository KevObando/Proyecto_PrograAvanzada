@model Proyecto_BazarLibreria.Models.Pedido

@{
    ViewBag.Title = "Detalles del Pedido";
}

<h2>Detalles del Pedido</h2>

<div>
    <h4>Pedido</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">ID</dt>
        <dd class="col-sm-10">@Model.Id</dd>
        <dt class="col-sm-2">Usuario</dt>
        <dd class="col-sm-10">@Model.UsuarioId</dd>
        <dt class="col-sm-2">Fecha</dt>
        <dd class="col-sm-10">@Model.Fecha.ToString("dd/MM/yyyy")</dd>
        <dt class="col-sm-2">Total</dt>
        <dd class="col-sm-10">@Model.Total.ToString("C")</dd>
    </dl>
</div>

<p>
    @Html.ActionLink("Volver a la lista", "Index", null, new { @class = "btn btn-secondary" })
</p>