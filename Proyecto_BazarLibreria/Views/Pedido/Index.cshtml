@model IEnumerable<Proyecto_BazarLibreria.Models.Pedido>

@{
    ViewBag.Title = "Pedidos";
}

<h2>Pedidos</h2>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Usuario</th>
            <th>Fecha</th>
            <th>Total</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var pedido in Model)
        {
            <tr>
                <td>@pedido.Id</td>
                <td>@pedido.UsuarioId</td>
                <td>@pedido.Fecha.ToString("dd/MM/yyyy")</td>
                <td>@pedido.Total.ToString("C")</td>
                <td>
                    @Html.ActionLink("Detalles", "Details", new { id = pedido.Id }, new { @class = "btn btn-info" })
                </td>
            </tr>
        }
    </tbody>
</table>